<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <aop:config>
        <aop:pointcut id="getMethodsPointcut" expression="execution(* com.moon..*.*(..))" />
        <!--<aop:pointcut id="addMethodsPointcut" expression="execution(* com.moon.controller.UserContorller.add*(..))" />-->
        <aop:aspect ref="logAopAspect" order="0">
            <!--<aop:before method="before" pointcut-ref="getMethodsPointcut"></aop:before>-->
            <aop:around method="around" pointcut-ref="getMethodsPointcut"/>
            <!--<aop:after method="after" pointcut-ref="getMethodsPointcut"></aop:after>-->
        </aop:aspect>
    </aop:config>


</beans>